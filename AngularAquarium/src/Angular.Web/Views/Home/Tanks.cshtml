@section scripts {
    <script src="~/js/controllers/tankcontroller.js" type="text/javascript"></script>
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <video autoplay loop muted class="background">
        <source src="https://static.videezy.com/system/resources/previews/000/002/459/original/moon-jellies-hd-stock-video.mp4" type="video/mp4" />
    </video>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <table class="table m-t-2 table-transparent" ng-controller="TankController as tc">
                    <tbody>
                        <tr ng-repeat="tank in tc.Tanks">
                            <td>
                                <p>
                                    <a class="btn btn-link" style="font-weight:bolder;
                                  font-size:large; color:black" href="/tanks/{{tank.id}}">{{tank.name}}</a>
                                </p>
                            </td>
                            <td>
                                <p>
                                    <a class="btn btn-primary" href="/tanks/{{tank.id}}">Explore Tank</a>
                                </p>
                            </td>

                            <td>
                                <button class="btn btn-danger" ng-click="tc.Remove(tank)">Remove</button>
                            </td>
                        </tr>
                        <tr ng-init="tank = {}">
                            <td colspan="2">
                                <input type="text" class="form-control" placeholder="Name" ng-model="tank.name" />
                            </td>
                            <td>
                                <button type="submit"  class="btn btn-primary" ng-click="tc.Add(tank)">Add a tank!</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>





