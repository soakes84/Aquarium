@{
    ViewData["Title"] = "Add Fish";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <video autoplay loop muted class="background">
        <source src="https://static.videezy.com/system/resources/previews/000/003/550/original/fish1.mp4" type="video/mp4" />
    </video>
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 m-t-2">
                <div class="table-transparent" ng-controller="AquariumController as aqc" ng-init="aqc.tank = @Model" ng-cloak>
                    <div class="table-heading text-center">
                      <h1>Fish</h1>  
                    </div>
                    <ol class="list-group">
                        <li class="list-group-item clearfix table-transparent" @*ng-init="fish = {}" *@>
                            <div class="col-sm-10">                              
                                <div>
                                    <input type="text" class="form-control" placeholder="Name" ng-model="fish.name" />
                                </div>
                                <div>
                                    <input type="text" class="form-control" placeholder="Type" ng-model="fish.type" />
                                </div>
                                <div>
                                    <input type="text" class="form-control" placeholder="Description" ng-model="fish.description" />
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-primary pull-right" ng-click="aqc.Add(fish)">Add your fish</button>
                                </div>
                                <div>
                                    <a class="btn btn-primary pull-left" href="/tanks/{{aqc.tank}}">Back to Tank</a>
                                </div>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


