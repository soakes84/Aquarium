@model Aquarium.Models.Fish

@section scripts {
    <script src="~/js/controllers/aquariumcontroller.js" type="text/javascript"></script>
}


@{ViewData["Title"] = "Fish";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <video autoplay loop muted class="background">
        <source src="https://static.videezy.com/system/resources/previews/000/002/459/original/moon-jellies-hd-stock-video.mp4" type="video/mp4" />
    </video>
    <div class="col-sm-5 col-sm-offset-4">
        <div class="panel panel-transparent m-t-2">
            <div class="panel-heading">Fish Bio</div>

            <table class="table table-transparent" ng-controller="AquariumController as aqc" ng-init="aqc.GetFishInfo(@Model.TankId,@Model.Id);">
                <tbody>
                    <tr>
                        <td>Name: {{aqc.fish.name}}</td>
                    </tr>
                    <tr>
                        <td>Type: {{aqc.fish.type}}</td>
                    </tr>
                    <tr>
                        <td>Description: {{aqc.fish.description}}</td>
                    </tr>
                    <tr ng-init="fish = {}">
                        <td>
                            <a class="btn btn-primary" href="/tanks/{{aqc.fish.tankId}}">Back To Tank</a>
                            <a class="btn btn-danger pull-right" ng-click="aqc.Remove(aqc.fish)" ng-href="/tanks/{{@Model.TankId}}">Remove</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</body>
</html>

